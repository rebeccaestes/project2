<%= form_for @concert do |f| %>

	<p><%= f.label :headliner %>
	<%= f.text_field :headliner %></p>

	<p><%= f.label :headliner_pic %>
	<%= f.text_field :headliner_pic%></p>

	<p><%= f.label :headliner_url %>
	<%= f.text_field :headliner_url %></p>

	<p><%= f.label :venue %><%= f.collection_select(:venue_id, @venues.order(:name), :id, :name) %>

	<% if @concert.id %>
		<div class="subtitle">(or, add a <%= link_to "new venue", new_concert_venue_path(@concert) %>)</div>
		<% else %>
		<div class="subtitle">(You can add a new venue after creating your concert.)</div>
		<% end %>
    </p>

	<p><%= f.label :date%>
	<%= f.date_field :date %></p>

	<p><%= f.label :openers_etc %>
	<%= f.text_field :openers_etc %>
	<div class="subtitle">(Names of the openers, doors & set times if available.)</div></p>

	<p><%= f.label :price %>
	<%= f.number_field :price %></p>

	<p><%= f.label :URL_for_buying_tickets %>
	<%= f.text_field :buy %></p>

	<%= f.submit 'update', class: 'enter' %>

<% end %>
